@model IEnumerable<Giohang2601.Models.Orders>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>List of Product</h2>
<form action="#">
    <table class="table">
        <tr>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>Photo</th>
            <th>UnitPrice</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>ProductId</th>
            
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.ProductId</td>
                <td>@item.Product.ProductName</td>
                <td>
                    <img src="~/images/@item.Product.Photo" width="70"/>
                </td>
                <td>@item.Product.Price</td>
                <td>
                    <input type="number" name="qty" id="qty" value="@item.Quantity" style="width: 50px;" />
                </td>
                <td>@(item.Quantity*item.Product.Price)</td>
                <td>
                    @Html.ActionLink("Remove", "Remove", new {id = item.Product.ProductId}, new {@class = "btn btn-success"})
                    @Html.ActionLink("Update", "Edit", new {id = item.Product.ProductId}, new {@class = "btn btn-success"})
                </td>
                    
            </tr>
        }
    </table>
</form>
@Html.ActionLink("Continue Shopping","Index","Product")





























