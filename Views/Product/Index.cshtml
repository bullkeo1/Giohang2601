@model IEnumerable<Giohang2601.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "_Layout";
}
@Html.ActionLink("Create","Create")
<table class="table">
    <tr>
        <th>ProductId</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Photo</th>
        <th>Action</th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>@item.ProductId</td>
        <td>@item.ProductName</td>
        <td>@item.Price</td>
        <td><img src="~images/"@item.Photo width="70"/></td>
        <td>
            @Html.ActionLink("Edit","Edit",new{@class="btn btn-success"})
            @Html.ActionLink("Delete","Delete",new{@class="btn btn-primary"})
            @Html.ActionLink("Add to Cart","Buy","Order",new{id=item.ProductId})
        </td>
    </tr>
}
</table>





























